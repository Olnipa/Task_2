using System;

namespace First_blood
{
    class Program
    {
        static void Main(string[] args)
        {
            Random random = new Random();
            int quantityOfMultipleNumbers = 0;
            int minNumberOfRange = 100;
            int maxNumberOfRange = 999;
            int minRandomNumber = 1;
            int maxRandomNumber = 28;
            int number = random.Next(minRandomNumber, maxRandomNumber);

            Console.Write("Загадано число: " + number);
            Console.WriteLine();

            for (int memory = 0; memory <= maxNumberOfRange; memory += number)
            {
                if (memory >= minNumberOfRange)
                {
                    quantityOfMultipleNumbers += 1;
                }
            }
            Console.WriteLine($"Количество трехзначных натуральных чисел, которые кратны {number}: {quantityOfMultipleNumbers}");
        }
    }
}
