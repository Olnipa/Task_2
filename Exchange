using System;

namespace First_blood
{
    class Program
    {
        static void Main(string[] args)
        {
            float oren = 100;
            float krone = 100;
            float floren = 100;
            float orenToKrone = 10;
            float kroneToFloren = 0.5f;
            float florenToOren = 2;
            float kroneToOren = 1 / orenToKrone;
            float florenToKron = 1 / kroneToFloren;
            float orenToFloren = 1 / florenToOren;
            string choosenMenuButton = "";
            float quantityToBuy;

            Console.WriteLine($"За убийство чудовищ в разных государствах Ведьмаку заплатили: " +
                $"\n1. {oren} Темерских Оренов" +
                $"\n2. {krone} Новиградских Крон." +
                $"\n3. {floren} Нильфгардских Флоренов" +
                $"\n\nВедьмак пришел в банк и хочет обменять деньги:");

            Console.WriteLine($"\nДобро пожаловать в банк, Ведьмак!\n\nКурсы обмена валют на сегодня:" +
                $"\n1. Орены к Кронам: {orenToKrone}" +
                $"\n2. Кроны к Флоренам: {kroneToFloren}" +
                $"\n3. Флорены к Оренам: {florenToOren}" +
                $"\n4. Кроны к Оренам: {kroneToOren}" +
                $"\n5. Флорены к Кронам: {florenToKron}" +
                $"\n6. Орены к Флоренам: {orenToFloren}" +
                $"\n\nУкажите, какую валюту вы хотели бы обменять?");

            while (choosenMenuButton != "0")
            {
                Console.WriteLine("\n1 - Обменять Орены на Кроны; 2 - Обменять Кроны на Флорены; 3 - Обменять Флорены на Орены;" +
                    "\n4 - Обменять Кроны на Орены; 5 - Обменять Флорены на Кроны; 6 - Обменять Орены на Флорены;\n0 - Выход;");
                choosenMenuButton = Console.ReadLine();

                switch (choosenMenuButton)
                {
                    case "1":
                        Console.WriteLine("\nВы выбрали обмен Оренов на Кроны. Сколько Крон вы хотите купить?");
                        quantityToBuy = Convert.ToSingle(Console.ReadLine());

                        if (oren >= quantityToBuy / orenToKrone)
                        {
                            oren -= quantityToBuy / orenToKrone;
                            krone += quantityToBuy;
                            Console.WriteLine("Обмен успешно совершен.");
                        }
                        else
                        {
                            Console.WriteLine("Недостаточно средств. Обмен не был совершен.");
                        }

                        break;
                    case "2":
                        Console.WriteLine("\nВы выбрали обмен Кронов на Флорены. Сколько Флоренов вы хотите купить?");
                        quantityToBuy = Convert.ToSingle(Console.ReadLine());

                        if (krone >= quantityToBuy / kroneToFloren)
                        {
                            krone -= quantityToBuy / kroneToFloren;
                            floren += quantityToBuy;
                            Console.WriteLine("Обмен успешно совершен.");
                        }
                        else
                        {
                            Console.WriteLine("Недостаточно средств. Обмен не был совершен.");
                        }
                        break;
                    case "3":
                        Console.WriteLine("\nВы выбрали обмен Флоренов на Орены. Сколько Оренов вы хотите купить?");
                        quantityToBuy = Convert.ToSingle(Console.ReadLine());

                        if (floren >= quantityToBuy / florenToOren)
                        {
                            floren -= quantityToBuy / florenToOren;
                            oren += quantityToBuy;
                            Console.WriteLine("Обмен успешно совершен.");
                        }
                        else
                        {
                            Console.WriteLine("Недостаточно средств. Обмен не был совершен.");
                        }
                        break;
                    case "4":
                        Console.WriteLine("\nВы выбрали обмен Кронов на Орены. Сколько Оренов вы хотите купить?");
                        quantityToBuy = Convert.ToSingle(Console.ReadLine());

                        if (krone >= quantityToBuy / kroneToOren)
                        {
                            krone -= quantityToBuy / kroneToOren;
                            oren += quantityToBuy;
                            Console.WriteLine("Обмен успешно совершен.");
                        }
                        else
                        {
                            Console.WriteLine("Недостаточно средств. Обмен не был совершен.");
                        }
                        break;
                    case "5":
                        Console.WriteLine("\nВы выбрали обмен Флоренов на Кроны. Сколько Крон вы хотите купить?");
                        quantityToBuy = Convert.ToSingle(Console.ReadLine());

                        if (floren >= quantityToBuy / florenToKron)
                        {
                            floren -= quantityToBuy / florenToKron;
                            krone += quantityToBuy;
                            Console.WriteLine("Обмен успешно совершен.");
                        }
                        else
                        {
                            Console.WriteLine("Недостаточно средств. Обмен не был совершен.");
                        }
                        break;
                    case "6":
                        Console.WriteLine("\nВы выбрали обмен Оренов на Флорены. Сколько Флоренов вы хотите купить?");
                        quantityToBuy = Convert.ToSingle(Console.ReadLine());

                        if (oren >= quantityToBuy / orenToFloren)
                        {
                            oren -= quantityToBuy / orenToFloren;
                            floren += quantityToBuy;
                            Console.WriteLine("Обмен успешно совершен.");
                        }
                        else
                        {
                            Console.WriteLine("Недостаточно средств. Обмен не был совершен.");
                        }
                        break;
                    case "0":
                        Console.WriteLine("\nВсего доброго, Ведьмак!");
                        break;
                    default:
                        Console.WriteLine("Вы не выбрали ни одной доступной валютной пары.");
                        break;
                }

                Console.WriteLine($"\nОстаток Оренов: {oren};\nОстаток Крон: {krone};\nОстаток Флоренов: {floren};");
            }
        }
    }
}
