using System;

namespace First_blood
{
    class Program
    {
        static void Main(string[] args)
        {
            string secretMessage = "Сокровища закопаны под пятой пальмой от северного мыса острова черепах.";
            string password = "123";
            string checkPassword = "";
            int tryQuantity = 3;

            for (int i = 0; i < tryQuantity; i += 1)
            {
                Console.WriteLine("Для получения доступа к секретному сообщению введите пароль. Всего осталось попыток: " + (tryQuantity - i) + ".");
                Console.Write("Введите пароль: ");
                checkPassword = Console.ReadLine();

                if (password == checkPassword)
                {
                    Console.WriteLine("Пароль введен верно. Секретное сообщение: " + secretMessage);
                    break;
                }
                else
                {
                    Console.WriteLine("Пароль введен неверно. Повторите попытку.");
                }
            }
        }
    }
}
