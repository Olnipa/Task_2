using System;

namespace First_blood
{
    class Program
    {
        static void Main(string[] args)
        {
            string phrase;
            string exitPhrase = "exit";

            Console.Write("Путешествуя по средиземью вы обнаружили золотую антилопу и попытались уговорить ее " +
                "\"наклепать\" вам золотых монет. Антилопа согласилась, но предупредила что не остановится пока не услышит слово " +
                "\"" + exitPhrase + "\". После чего монеты вокруг посыпались отовсюду в безумных количествах." +
                "\nМысль о богатстве затуманила Ваш разум и вы неосознанно произнесли фразу: ");
            phrase = Console.ReadLine();

            while (phrase != exitPhrase)
            {
                Console.WriteLine("Вы сказали антилопе: \"" + phrase + "\". Антилопа закидывает все вокруг монетами " +
                    "и не обращает на вас никакого внимания.");
                Console.WriteLine("Золотых монет стало так много, что вы в них тонете. " +
                    "\nНапишите, что вы хотите сказать антилопе: ");
                phrase = Console.ReadLine();
            }

            Console.WriteLine("Антилопа перестала \"клепать\" монеты, посмотрела на вас с довольной ехидной " +
                        "улыбкой и через мгновение все золотые монеты вокруг вас превратились в пыль.");
        }
    }
}
