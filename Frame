using System;

namespace First_blood
{
    class Program
    {
        static void Main(string[] args)
        {
            char anySymbol;
            string anyWord;
            int stringLengh;

            Console.Write("Введите любое слово: ");
            anyWord = Console.ReadLine();
            Console.Write("Введите любой символ: ");
            anySymbol = Convert.ToChar(Console.ReadLine());
            stringLengh = anyWord.Length;
            Console.WriteLine();

            for (int i = 0; i < (stringLengh + 2) * 2; i += 1)
            {
                if (i == stringLengh + 2)
                {
                    Console.Write("\n" + anySymbol + anyWord + anySymbol + "\n");
                }
                Console.Write(anySymbol);

            }
        }
    }
}
