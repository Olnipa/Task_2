using System;

namespace First_blood
{
    class Program
    {
        static void Main(string[] args)
        {
            char anySymbol;
            string anyWord;
            int stringLengh;
            string board = "";

            Console.Write("Введите любое слово: ");
            anyWord = Console.ReadLine();
            Console.Write("Введите любой символ: ");
            anySymbol = Convert.ToChar(Console.ReadLine());
            stringLengh = anyWord.Length;
            Console.WriteLine();

            for (int i = 0; i < stringLengh + 2; i += 1)
            {
                board += Convert.ToString(anySymbol);
            }
            
            Console.WriteLine(board + "\n" + anySymbol + anyWord + anySymbol + "\n" + board);
        }
    }
}
