using System;

namespace First_blood
{
    class Program
    {
        static void Main(string[] args)
        {
            int summ = 0;
            int minRandomNumber = 0;
            int maxRandomNumber = 101;
            int multiplicity1 = 3;
            int multiplicity2 = 5;
            Random random = new Random();
            int randomNumber = random.Next(minRandomNumber, maxRandomNumber);

            for (int i = randomNumber; i > 0; i -= 1)
            {
                if (i % multiplicity1 == 0 || i % multiplicity2 == 0)
                {
                    summ += i;
                }
            }

            Console.WriteLine("Сумма всех положительных чисел меньше " + randomNumber + " (включая " + randomNumber + "), которые кратные " + multiplicity1 + " или " + multiplicity2 + ": " + summ);
        }
    }
}
